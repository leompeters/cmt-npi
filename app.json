{
  "name": "cmt-npi",
  "description": "Retrieves a providerâ€™s details based on their\nNational Provider Identifier (NPI)",
  "keywords": [
    "cmt",
    "npi"
  ],
  "website": "https://cmt-npi.herokuapp.com",
  "repository": "https://github.com/leompeters/cmt-npi",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    },
    "LANG":                     { "required": true },
    "RACK_ENV":                 { "required": true },
    "RAILS_ENV":                { "required": true },
    "RAILS_LOG_TO_STDOUT":      { "required": true },
    "RAILS_SERVE_STATIC_FILES": { "required": true },
    "SECRET_KEY_BASE":          { "required": true }
  },
  "formation": {
    "web": {
      "quantity": 2,
      "size": "Free"
    },
    "worker": { "quantity": 1 }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "12"
      }
    }
  ],
  "buildpacks": [
    { "url": "heroku/ruby" }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "bundle exec rails rspec"
      }
    }
  }
}
